{% extends "::layout.html.twig" %}


{% block title 'Accueil' %}



{% block header %}
    <h1>Liste des tweets</h1>
{% endblock %}

{% block content %}

            {% for index, tweet in listTweets %}
                {% if loop.first %}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {{ index }} : {{ tweet.message }}
                        </div>
                    </div>
                {% else %}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            {{ index|upper }} : {{ tweet.message|upper }}
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <p>Aucun tweet</p>
            {% endfor %}


{% endblock %}